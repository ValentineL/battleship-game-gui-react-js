{
  "name": "battleship-game-gui-react-js",
  "version": "0.2.0",
  "private": true,
  "dependencies": {
    "axios": "^0.15.2",
    "bootstrap": "^3.3.7",
    "lessc-each": "^1.1.0",
    "node-bytes-calculator": "^1.0.0",
    "node-parameter-handler": "^1.0.0",
    "prop-types": "^15.5.10",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-rangeslider": "^2.0.1",
    "react-scripts": "^0.7.0",
    "react-router": "^4.0.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "less-watch-compile": "^1.1.8"
  },
  "scripts": {
    "start": "npm run generate:all; concurrently \"npm run generate:css:w\" \"npm run start:lite-server\"",
    "start:lite-server": "react-scripts start",
    "build": "npm run generate:all; react-scripts build",
    "test": "react-scripts test --env=jsdom --verbose",
    "generate:all": "npm run generate:settings; npm run generate:css",
    "generate:settings": "node node_modules/node-parameter-handler",
    "generate:css": "node node_modules/lessc-each src/stylesheets/less/component public/assets/css --verbose; node node_modules/lessc-each src/stylesheets/less/handler public/assets/css --verbose; ",
    "generate:css:w": "node node_modules/less-watch-compile -w src/stylesheets/less -o public/assets/css --verbose"
  },
  "extra": {
    "node_parameter_handler": [
      {
        "source": "src/parameters.json.dist",
        "output": "src/parameters.json",
        "envMap": {
          "api.host": "BASE_URL"
        }
      }
    ]
  }
}
